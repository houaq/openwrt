/dts-v1/;

#include "mt7621.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	compatible = "dhitek,dhr-v2", "mediatek,mt7621-soc";
	model = "DHR-v2";

	memory@0 {
		device_type = "memory";
		reg = <0x0 0x1c000000>, <0x20000000 0x4000000>;
	};

	chosen {
		bootargs = "console=ttyS0,115200";
	};

	palmbus: palmbus@1E000000 {
		i2c@900 {
			status = "okay";
			pcf8563: rtc@51 {
				status = "okay";
				compatible = "nxp,pcf8563";
				reg = <0x51>;
			};
		};
	};

	gpio-keys-polled {
		compatible = "gpio-keys-polled";
		#address-cells = <1>;
		#size-cells = <0>;
		poll-interval = <20>;

		reset {
			label = "reset";
			gpios = <&gpio0 30 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};
		BTN_2 {
			label = "BTN_2";
			gpios = <&gpio0 26 1>;
			linux,code = <BTN_2>;
		};
	};

	gpio-leds {
		compatible = "gpio-leds";

		sys {
			label = "dhr-v2:green:sys";
			gpios = <&gpio0 31 GPIO_ACTIVE_LOW>;
		};
		online {
			label = "dhr-v2:yellow:online";
			gpios = <&gpio1 1 GPIO_ACTIVE_LOW>;
		};
		wan {
			label = "dhr-v2:green:wan";
			gpios = <&gpio0 24 GPIO_ACTIVE_LOW>;
		};
		sig1 {
			label = "dhr-v2:green:sig1";
			gpios = <&gpio1 0 GPIO_ACTIVE_LOW>;
		};
		sig2 {
			label = "dhr-v2:green:sig2";
			gpios = <&gpio0 22 GPIO_ACTIVE_LOW>;
		};
		sig3 {
			label = "dhr-v2:green:sig3";
			gpios = <&gpio0 23 GPIO_ACTIVE_LOW>;
		};
		relay {
			label = "dhr-v2:no:relay";
			gpios = <&gpio0 25 GPIO_ACTIVE_HIGH>;
		};
	};
};

&sdhci {
	status = "okay";
};

&spi0 {
	status = "okay";

	m25p80@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <10000000>;
		m25p,chunked-io = <32>;

		partition@0 {
			label = "u-boot";
			reg = <0x0 0x30000>;
			read-only;
		};

		partition@30000 {
			label = "u-boot-env";
			reg = <0x30000 0x10000>;
			read-only;
		};

		factory: partition@40000 {
			label = "factory";
			reg = <0x40000 0x10000>;
			read-only;
		};

		firmware: partition@50000 {
			label = "firmware";
			reg = <0x50000 0xfb0000>;
		};
	};
};

&pcie {
	status = "okay";
};

&ethernet {
	mtd-mac-address = <&factory 0x4>;
};

&pinctrl {
	state_default: pinctrl0 {
		gpio {
			ralink,group = "rgmii2", "jtag", "mdio";
			ralink,function = "gpio";
		};
	};
};
